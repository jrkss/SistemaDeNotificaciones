<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro"
    android:background="@drawable/fondo_campusp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/et_NombreA"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Nombre"
            android:textColorHint="#481553"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:background="@drawable/editar"
            android:padding="20dp"/>

        <EditText
            android:id="@+id/et_MatriculaA"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Matricula"
            android:textColorHint="#481553"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:drawableLeft="@drawable/ic_baseline"
            android:drawablePadding="10dp"
            android:background="@drawable/editar"
            android:padding="20dp"/>


        <Spinner
            android:id="@+id/SpinnerIngenieria"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/editar"
            android:entries="@array/Ingeniería" />

        <Spinner
            android:id="@+id/SpinnerCampus"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/editar"
            android:entries="@array/Campus" />

        <Spinner
            android:id="@+id/SpinnerSemestre"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/editar"
            android:entries="@array/semestre" />



        <EditText
            android:id="@+id/et_EmailA"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Correo"
            android:textColorHint="#481553"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:background="@drawable/editar"
            android:padding="20dp"/>

        <EditText
            android:id="@+id/et_PassA"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Contraseña"
            android:textColorHint="#481553"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:background="@drawable/editar"
            android:padding="20dp"/>

        <Button
            android:id="@+id/et_RegistroA"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Resgistrar"
            android:textColor="#fff"
            android:layout_marginTop="35dp"
            android:background="@drawable/button"
            />

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>